<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".appointment_details">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:orientation="vertical">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="25"
          android:orientation="vertical">
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:src="@drawable/gromming_img"
              android:scaleType="fitXY"/>
      </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:background="@color/notthatwhite"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="1dp"
            android:weightSum="100">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="center|left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Infomation"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="center|right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: "
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/appoint_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLM_0000000012"
                    android:textSize="14dp"
                    android:textColor="@color/green"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginTop="1dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/white_shape"
                android:layout_weight="40"
                android:padding="10dp"
                android:layout_marginVertical="5dp">
                <ImageView
                    android:id="@+id/app_details_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gromming"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/white_shape"
                android:layout_weight="60"
                android:padding="10dp"
                android:orientation="vertical"
                android:gravity="center|left"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/appoint_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableStart="@drawable/service"
                    android:drawablePadding="10dp"
                    android:text="Service" />
                <TextView
                    android:id="@+id/appoint_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:drawableStart="@drawable/store_icon"
                    android:drawablePadding="10dp"
                    android:text="Store" />
                <TextView
                    android:id="@+id/appoint_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/date_icon"
                    android:drawablePadding="10dp"
                    android:text="Date"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/appoint_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/time"
                android:drawablePadding="10dp"
                android:text="Time"
                android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: "
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:id="@+id/appoint_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Requesting"
                        android:textColor="@color/green"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>




            </LinearLayout>

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:background="@color/notthatwhite"
            android:gravity="center|left"
            android:paddingHorizontal="10dp"
            android:layout_marginVertical="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Info"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_shape"
                android:layout_weight="60"
                android:padding="20dp"
                android:layout_marginVertical="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/appoint_fname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/store_icon"
                    android:drawablePadding="10dp"
                    android:text="fname "
                    android:layout_marginBottom="10dp"/>
                    <TextView
                        android:id="@+id/appoint_lname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="10dp"
                        android:text="lname"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/appoint_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/address"
                    android:drawablePadding="10dp"
                    android:text="Address"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/appoint_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/time"
                    android:drawablePadding="10dp"
                    android:text="Contact"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/appoint_landmark"
                        android:drawableStart="@drawable/landmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Landmark"
                        android:drawablePadding="10dp"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>




            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</LinearLayout>