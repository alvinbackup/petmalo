<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/apppoinment_shape"
    android:orientation="vertical"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/app_img"
            android:layout_width="120dp"
            android:layout_height="105dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/gromming" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/darkblue"
                android:id="@+id/app_service"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:drawableStart="@drawable/store_icon"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:textSize="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="store"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:id="@+id/app_store"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/date_icon"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:textSize="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:id="@+id/app_date"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/time_icon"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:textSize="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:id="@+id/app_time"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="right|bottom">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: "
                        android:textColor="@color/gray"
                        android:textSize="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="status"
                        android:textSize="12sp"
                        android:id="@+id/app_status"
                        android:textColor="@color/green"
                        android:layout_gravity="right"
                        android:paddingRight="10dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="store_id"
                android:textSize="10sp"
                android:id="@+id/app_storeid"
                android:layout_gravity="center"
                android:visibility="gone"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:textSize="10sp"
                android:id="@+id/app_email"
                android:layout_gravity="center"
                android:visibility="gone"
                />
            <TextView
                android:visibility="gone"
                android:textSize="10sp"
                android:text="Appoinment_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_appid"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_fname"
                android:text="Fname"
                android:textSize="10sp"
                android:visibility="gone"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_lname"
               android:textSize="10sp"
                android:text="Lname"
                android:visibility="gone"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_address"
                android:textSize="10sp"
                android:text="Address"
                android:visibility="gone"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_landmark"
                android:textSize="10sp"
                android:text="Landmark"
                android:visibility="gone"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_contact"
                android:textSize="10sp"
                android:text="contact"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>