<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appointment_list"
    android:background="@color/orange2"


    >
    <ImageView
        android:id="@+id/noapp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/noappointment"
        android:visibility="gone"
        android:scaleType="fitXY"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recview_appointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/home_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/darkblue"
        app:itemIconTint="@drawable/itemcolor"
        app:itemTextColor="@drawable/nocolor_nav"
        app:menu="@menu/bottom_nav"
      />
</RelativeLayout>